<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.monthly.MonthlyFragment">

    <data>
        <variable
            name="fragment"
            type="com.zahi.goalscalendar.presentation.monthly.MonthlyFragment" />
        <variable
            name="year"
            type="Integer" />
        <variable
            name="month"
            type="Integer" />
        <variable
            name="goal"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/headerLayout"
            layout="@layout/layout_monthly_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:year="@{year}"
            android:month="@{month}"
            app:layout_constraintTop_toTopOf="parent"/>

        <include
            android:id="@+id/calendarLayout"
            layout="@layout/layout_monthly_calendar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/headerLayout"
            app:layout_constraintBottom_toTopOf="@+id/bottomLayout"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarLayout"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/goalHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goalHead"
                android:textSize="@dimen/_27sp"
                android:textColor="@color/purple_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/goalPercent"
                app:layout_constraintBottom_toBottomOf="@id/goalPercent"/>

            <TextView
                android:id="@+id/goalPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/goalPercent(goal)}"
                android:textSize="@dimen/_36sp"
                android:textColor="@color/purple_700"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/goalHead"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="@dimen/_36sp"
                android:textColor="@color/purple_700"
                app:layout_constraintStart_toEndOf="@+id/goalPercent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>